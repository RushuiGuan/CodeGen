<UserControl x:Class="Albatross.CodeGen.Tool.View.ServerInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Albatross.CodeGen.Tool.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

	<UserControl.Resources>
		<ResourceDictionary Source="Style.xaml"/>
	</UserControl.Resources>

	<GroupBox Header="Server">
		<Grid Style="{StaticResource inputLayout}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Label Style="{StaticResource label}">Data Source</Label>
			<TextBox Style="{StaticResource textInput}" Grid.Column="1" Text="{Binding DataSource, UpdateSourceTrigger=PropertyChanged}"/>

			<Label Grid.Row="1" Style="{StaticResource label}">Initial Catalog</Label>
			<TextBox Grid.Row="1" Style="{StaticResource textInput}" Grid.Column="1" Text="{Binding InitialCatalog, UpdateSourceTrigger=PropertyChanged}"/>
		</Grid>
	</GroupBox>
</UserControl>
