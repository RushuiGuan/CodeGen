<UserControl x:Class="Albatross.CodeGen.Tool.View.AssemblyLocationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Albatross.CodeGen.Tool.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<DockPanel>
		<ToolBar DockPanel.Dock="Top">
			<Button Command="{Binding RefreshCommand}">Refresh</Button>
			<Button Command="{Binding SaveCommand}">Save</Button>
			<Button Command="{Binding CloseCommand}">Close</Button>
		</ToolBar>
		<Border>
			<TextBox AcceptsReturn="True" AcceptsTab="False" Margin="5" Text="{Binding Locations, UpdateSourceTrigger=PropertyChanged}">
			</TextBox>
		</Border>
	</DockPanel>

</UserControl>
